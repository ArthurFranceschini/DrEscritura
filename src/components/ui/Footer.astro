---
import { Image } from "astro:assets";
import { Instagram, Linkedin } from "lucide-astro";
import Logo from "../../assets/logo-alt.svg";

const logos = [
  { name: "Instagram", icon: Instagram, link: "https://instagram.com" },
  { name: "Linkedin", icon: Linkedin, link: "https://linkedin.com" },
];

// Detecta se está na home ou em outra página
const currentPath = Astro.url.pathname;
const isHome = currentPath === '/' || currentPath === '';
const baseUrl = isHome ? '' : '/';

const links = [
  { name: "Home", href: `${baseUrl}#Hero` },
  { name: "Sobre", href: `${baseUrl}#Abf` },
  { name: "Benefícios", href: `${baseUrl}#Beneficios` },
  { name: "Infoprodutos", href: `${baseUrl}#Infoprodutos` },
  { name: "Planos", href: `${baseUrl}#Planos` },
  { name: "Depoimentos", href: `${baseUrl}#Depoimentos` },
];
---

<section class="sm:px-5">
  <div class="w-full max-w-[1240px] mx-auto">
    <div
      class="px-[15px] bg-dark text-gray py-[55px] lg:px-[60px] sm:rounded-t-[45px]"
    >
      <div>
        <div
          class="flex flex-col lg:flex-row gap-7 items-center justify-between"
        >
          <picture>
            <a href="/#Hero">
              <Image 
                src={Logo} 
                alt="Logo" 
                style={{ height: "100px", width: "auto" }} 
              />
            </a>
          </picture>
          <ul class="flex flex-col sm:flex-row gap-5">
            {
              links.map((link) => {
                return (
                  <li class="text-center">
                    <a class="underline hover:text-white transition-colors" href={link.href}>
                      {link.name}
                    </a>
                  </li>
                );
              })
            }
          </ul>
          <ul class="flex gap-5">
            {
              logos.map(({ name, icon: Icon, link }) => {
                return (
                  <li>
                    <a href={link} target="_blank" class="hover:text-white transition-colors">
                      <Icon class="w-6 h-6" />
                    </a>
                  </li>
                );
              })
            }
          </ul>
        </div>

        <div class="flex flex-col lg:flex-row mt-[66px] mb-[51px]">
          <div
            class="flex text-center lg:text-start flex-col w-full lg:w-[30%]"
          >
            <h3 class="mb-5 text-center md:text-left text-2xl text-green">Contate-nos</h3>
            <div class="flex flex-col justify-between gap-4">
              <span> Email: exemplodeemail@email.com </span>
              <span> Telfone: +55 45 991284397 </span>
              <span class="lg:w-3/4">
                Endereço:  Nome da rua, 123 - Avenida Paraná, Foz do Iguaçu - PR
              </span>
            </div>
          </div>
          <div class="flex-grow my-10 lg:my-0 lg:ml-12">
          </div>
        </div>
      </div>
    </div>
  </div>
</section>