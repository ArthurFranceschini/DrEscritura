---
import { Image } from "astro:assets";
import Card from "./Card.astro";

const { titleTop, titleBottom, description, img, alt, noWrap } = Astro.props;
---

<Card isUnderline={true} class="bg-green rounded-[45px]">
  <div
    class="w-full rounded-[45px] p-8 sm:p-[50px] grid lg:grid-cols-2 lg:gap-[60px] gap-8 items-stretch min-h-[400px] lg:min-h-[500px]"
  >
    <div class="flex flex-col gap-4 justify-center">
      <h3 class="flex flex-col">
        <span class={`whitehead w-fit ${noWrap ? 'whitespace-nowrap' : ''}`}>{titleTop}</span>
        <span class="whitehead w-fit">{titleBottom}</span>
      </h3>
      <p class="text-white/90">
        {description}
      </p>
    </div>

    <div class="relative w-full h-full min-h-[250px]">
      <Image
        src={img}
        alt={alt}
        class="absolute inset-0 w-full h-full object-cover rounded-2xl"
      />
    </div>
  </div>
</Card>