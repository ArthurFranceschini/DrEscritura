---
interface Props {
  phone?: string;
  message?: string;
  tooltip?: string;
  position?: 'bottom-right' | 'bottom-left' | 'top-right' | 'top-left';
  size?: 'small' | 'medium' | 'large';
  pulse?: boolean;
}

const {
  phone = '5598981207814',
  message = 'Olá, gostaria de mais informações',
  tooltip = 'Fale conosco!',
  position = 'bottom-right',
  size = 'medium',
  pulse = true
} = Astro.props;

const encodedMessage = encodeURIComponent(message);
const whatsappUrl = `https://api.whatsapp.com/send?phone=5545991419164&text=Gostaria%20de%20mais%20informa%C3%A7%C3%B5es%20do%20Curso%20regularizador%20de%20im%C3%B3veis`;

// Definir tamanhos
const sizes = {
  small: { button: '50px', icon: '28px' },
  medium: { button: '60px', icon: '35px' },
  large: { button: '70px', icon: '42px' }
};

// Definir posições
const positions = {
  'bottom-right': { bottom: '20px', right: '20px' },
  'bottom-left': { bottom: '20px', left: '20px' },
  'top-right': { top: '20px', right: '20px' },
  'top-left': { top: '20px', left: '20px' }
};

const currentSize = sizes[size];
const currentPosition = positions[position];
---

<a
  href={whatsappUrl}
  class={`whatsapp-button ${pulse ? 'pulse' : ''}`}
  target="_blank"
  rel="noopener noreferrer"
  aria-label={tooltip}
  data-tooltip={tooltip}
>
