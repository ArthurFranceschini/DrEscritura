---
import MainLayout from "@/layouts/MainLayout.astro";


const produtos = [
  {
    id: 1,
    tipo: "Curso",
    titulo: "Programa de Aceleração de Negócios",
    descricao: "Aprenda do zero como se tornar um regularizador de imóveis profissional e dominar um mercado bilionário. Transforme propriedades irregulares em ativos legalizados.",
    imagem: "/Capacurso.png",
    preco: "R$ 997,00",
    destaque: "Mais de 10 horas de conteúdo prático",
    beneficios: [
      "Certificado de conclusão",
      "Acesso de 2 anos ao produto",
      "Encontro ao vivo com especialista",
      "Atualizações gratuitas",
    ],
    link: "/RegularizadorDeImoveis",
    tag: "Lançamento"
  },
  {
    id: 2,
    tipo: "E-book",
    titulo: "Código da Regularização de Imóveis",
    descricao: "O guia definitivo para transformar imóveis irregulares em patrimônio legalizado. Mais de 50 páginas com passo a passo completo, checklists e estratégias validadas.",
    imagem: "/Capaebook.png",
    preco: "R$ 47,00",
    destaque: "Download imediato após compra",
    beneficios: [
      "10 capítulos práticos",
      "Modelos de documentos",
      "Cases reais explicados",
      "Checklists prontos",
      "Atualizações gratuitas"
    ],
    link: "/Ebook",
    tag: "Lançamento"
  }
];
---

<MainLayout title="Infoprodutos - Dr. Escritura" description="Descubra nossos cursos e e-books sobre regularização de imóveis">
  <section id="InfoProdutos" class="infoprodutos-section">
    <div class="container">
      <!-- Header da seção -->
      <div class="section-header">
        <h1 class="section-title">Nossos <span class="highlight">Infoprodutos</span></h1>
        <p class="section-subtitle">
          Aprenda com especialistas e domine a regularização de imóveis
        </p>
      </div>

      <!-- Grid de produtos -->
      <div class="produtos-grid">
        {produtos.map((produto) => (
          <article class="produto-card">
            {/* Tag de destaque */}
            {produto.tag && (
              <div class="produto-tag">{produto.tag}</div>
            )}

            {/* Imagem do produto */}
            <div class="produto-imagem">
              <img src={produto.imagem} alt={produto.titulo} />
              <div class="produto-tipo">{produto.tipo}</div>
            </div>

            {/* Conteúdo */}
            <div class="produto-conteudo">
              <h2 class="produto-titulo">{produto.titulo}</h2>
              <p class="produto-descricao">{produto.descricao}</p>

              {/* Destaque especial */}
              <div class="produto-destaque">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <polyline points="20 6 9 17 4 12"></polyline>
                </svg>
                <span>{produto.destaque}</span>
              </div>

              {/* Benefícios */}
              <ul class="produto-beneficios">
                {produto.beneficios.map((beneficio) => (
                  <li>
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <polyline points="20 6 9 17 4 12"></polyline>
                    </svg>
                    {beneficio}
                  </li>
                ))}
              </ul>

              {/* Rodapé com preço e CTA */}
              <div class="produto-footer">
                <div class="produto-preco">
                  <span class="preco-label">Por apenas</span>
                  <span class="preco-valor">{produto.preco}</span>
                </div>
                <a href={produto.link} class="btn-comprar" target="_blank" rel="noopener noreferrer">
                Saiba Mais
                </a>
              </div>
            </div>
          </article>
        ))}
      </div>

      {/* CTA final */}
      <div class="cta-final">
        <h3>Não encontrou o que procurava?</h3>
        <p>Entre em contato e descubra qual produto é ideal para você</p>
        <a href="/contato" class="btn-contato">Falar com Especialista</a>
      </div>
    </div>
  </section>
</MainLayout>

<style>
  .infoprodutos-section {
    padding: 80px 20px;
    background: #ffffff;
    min-height: 100vh;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  /* Header */
  .section-header {
    text-align: center;
    margin-bottom: 60px;
  }

  .section-title {
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: 800;
    color: #1a1a1a;
    margin-bottom: 16px;
  }

  .highlight {
    background: linear-gradient(135deg, #6CBE50 0%, #4a9939 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .section-subtitle {
    font-size: 1.25rem;
    color: #666;
    max-width: 600px;
    margin: 0 auto;
  }

  /* Grid de produtos */
  .produtos-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 40px;
    margin-bottom: 80px;
  }

  /* Card do produto */
  .produto-card {
    background: white;
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    position: relative;
  }

  .produto-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
  }

  /* Tag de destaque */
  .produto-tag {
    position: absolute;
    top: 20px;
    right: 20px;
    background: linear-gradient(135deg, #4a9939 0%, #6CBE50 100%);
    color: white;
    padding: 8px 16px;
    border-radius: 20px;
    font-size: 0.875rem;
    font-weight: 600;
    z-index: 2;
    box-shadow: 0 4px 12px rgba(245, 245, 108, 0.4);
  }

  /* Imagem */
  .produto-imagem {
    position: relative;
    width: 100%;
    height: 250px;
    overflow: hidden;
    background: linear-gradient(135deg, #6CBE50 0%, #4a9939 100%);
  }

  .produto-imagem img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .produto-card:hover .produto-imagem img {
    transform: scale(1.1);
  }

  .produto-tipo {
    position: absolute;
    bottom: 15px;
    left: 15px;
    background: rgba(255, 255, 255, 0.95);
    padding: 6px 16px;
    border-radius: 20px;
    font-size: 0.875rem;
    font-weight: 600;
    color: #4a9939;
  }

  /* Conteúdo */
  .produto-conteudo {
    padding: 30px;
  }

  .produto-titulo {
    font-size: 1.5rem;
    font-weight: 700;
    color: #1a1a1a;
    margin-bottom: 12px;
    line-height: 1.3;
  }

  .produto-descricao {
    font-size: 1rem;
    color: #666;
    line-height: 1.6;
    margin-bottom: 20px;
  }

  /* Destaque */
  .produto-destaque {
    display: flex;
    align-items: center;
    gap: 8px;
    background: #f0fdf4;
    padding: 12px 16px;
    border-radius: 10px;
    margin-bottom: 20px;
    color: #6CBE50;
    font-weight: 600;
    font-size: 0.938rem;
  }

  .produto-destaque svg {
    flex-shrink: 0;
  }

  /* Benefícios */
  .produto-beneficios {
    list-style: none;
    padding: 0;
    margin: 0 0 24px 0;
  }

  .produto-beneficios li {
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 8px 0;
    color: #555;
    font-size: 0.938rem;
  }

  .produto-beneficios svg {
    color: #6CBE50;
    flex-shrink: 0;
  }

  /* Footer do card */
  .produto-footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-top: 20px;
    border-top: 1px solid #e5e7eb;
  }

  .produto-preco {
    display: flex;
    flex-direction: column;
  }

  .preco-label {
    font-size: 0.875rem;
    color: #999;
    margin-bottom: 4px;
  }

  .preco-valor {
    font-size: 1.75rem;
    font-weight: 800;
    color: #1a1a1a;
  }

  .btn-comprar {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    background: linear-gradient(135deg, #6CBE50 0%, #4a9939 100%);
    color: white;
    padding: 12px 24px;
    border-radius: 10px;
    text-decoration: none;
    font-weight: 600;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    box-shadow: 0 4px 12px rgba(108, 190, 80, 0.4);
  }

  .btn-comprar:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 16px rgba(108, 190, 80, 0.5);
  }

  /* CTA Final */
  .cta-final {
    text-align: center;
    background: white;
    padding: 60px 40px;
    border-radius: 20px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  }

  .cta-final h3 {
    font-size: 2rem;
    font-weight: 700;
    color: #1a1a1a;
    margin-bottom: 12px;
  }

  .cta-final p {
    font-size: 1.125rem;
    color: #666;
    margin-bottom: 30px;
  }

  .btn-contato {
    display: inline-block;
    background: linear-gradient(135deg, #6CBE50 0%, #4a9939 100%);
    color: white;
    padding: 16px 40px;
    border-radius: 10px;
    text-decoration: none;
    font-weight: 600;
    font-size: 1.125rem;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    box-shadow: 0 4px 12px rgba(108, 190, 80, 0.4);
  }

  .btn-contato:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 16px rgba(108, 190, 80, 0.5);
  }

  /* Responsivo */
  @media (max-width: 768px) {
    .infoprodutos-section {
      padding: 60px 16px;
    }

    .produtos-grid {
      grid-template-columns: 1fr;
      gap: 30px;
    }

    .produto-footer {
      flex-direction: column;
      gap: 16px;
      align-items: stretch;
    }

    .btn-comprar {
      justify-content: center;
    }

    .cta-final {
      padding: 40px 24px;
    }
  }
</style>